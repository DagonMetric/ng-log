{
  "extends": "../tsconfig-build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "../",
    "outDir": "../../../dist/packages/ng-log",

    "paths": {
      "@dagonmetric/ng-log": [ "../../../dist/packages/ng-log" ]
    },
  },
  "files": [
    "public_api.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "flatModuleOutFile": "console.js",
    "flatModuleId": "@dagonmetric/ng-log/console"
  }
}
