# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Typescript, javascript and client-side files
[*.{ts,tsx,js,jsx,html,css,scss,less}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

# Configuration Files
[*.{json,xml,yml}]
indent_size = 2
