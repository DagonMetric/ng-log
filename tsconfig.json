{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",

    "experimentalDecorators": true,

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "strictPropertyInitialization": true,

    "sourceMap": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es2018", "dom" ],

    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./out-tsc",

    "paths": {
      "@dagonmetric/ng-log": ["./modules/ng-log"]
    }
  }
}
